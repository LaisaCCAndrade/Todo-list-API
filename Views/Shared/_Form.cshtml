@model TodoViewModel

<div class="container">
    <form asp-action="Insert" id="form-action" method="post">
        <div asp-validation-summary="All"></div>  
        <div class="form-group">
            <label asp-for="Todo.Title" class="form-label"></label>
            <input asp-for="Todo.Id" type="hidden" class="form-control" />
            <input asp-for="Todo.Title" class="form-control" />
            <span asp-validation-for="Todo.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" id="form-button" class="btn btn-success" value="Adicionar Tarefa" />
        </div>
    </form>

    <div class="row justify-content-center">
        <div class="col-10">
            <div class="table-wrapper">
                <table class="table">
                    <tbody>
                        @foreach (var t in Model.TodoList)
                        {
                            <tr>
                                <th class="todos-column" scope="row">@t.Id</th>
                                <td class="todos-column">@t.Title</td>
                                <td class="buttons-column">
                                    <i class="bi bi-trash" onClick="deleteTodo(@t.Id)"></i>
                                </td>
                                    <td class="buttons-column">
                                    <i class="bi bi-pencil-square" onClick="populateForm(@t.Id)"></i>
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

